    pass   


diff = data_max - (data_min or data_max)
diff = 10 if diff.days > 10 else (diff.days + 1 )

date_generator = (data_max - datetime.timedelta(days=i) for i in itertools.count() )

dates = list(itertools.islice(date_generator,diff) )

deltas = []
